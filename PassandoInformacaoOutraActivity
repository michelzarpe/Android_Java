//Dialog
private AlertDialog.Builder dialog;
//adicionar botao com a acao
dialog = new AlertDialog.Builder(MainActivity.this);
dialog.setTitle("Titulo Dialog");
dialog.setMessage("Mensagem");
dialog.setCancelable(false);//não é possivel cancelar o dialog.setIcon(android.R.drawable.....);//icone

dialog.setNegativeButton("Não",
new DialogInterface.OnClickListener(){
@Override
public void onClick(DialogInterface dialog, int which){
   Toast.makeText(MainActivity.this,"Precionado não",Toast.LENGTH_SHORT).show;
  }
});



dialog.setPositiveButton("Sim",
new DialogInterface.OnClickListener(){
@Override
public void onClick(DialogInterface dialog, int which){
   Toast.makeText(MainActivity.this,"Precionado sim",Toast.LENGTH_SHORT).show;
  }
});
dialog.create();
dialog.show();
